<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:background="#33cc99"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tm.tresmore.Login">

    <Button
        android:layout_width="250sp"
        android:layout_height="40dp"
        android:background="@drawable/logsignbuttonw"
        android:textColor="#33cc99"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:id="@+id/loginButton"
        android:text="Login"
        android:layout_below="@+id/userId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp" />
    <EditText
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textColor="#33cc99"
        android:textStyle="bold"
        android:textColorHint="#33cc99"
        android:hint="username"
        android:background="@drawable/textcorner"
        android:padding="10dp"
        android:textSize="15sp"
        android:id="@+id/userId"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/password" />
    <EditText
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#33cc99"
        android:textColorHint="#33cc99"
        android:textStyle="bold"
        android:background="@drawable/textcorner"
        android:padding="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_marginBottom="209dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loginButton" />



    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:src="@drawable/logo_white"
        android:id="@+id/logo"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/userId"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/pbbar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

</RelativeLayout>
